{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "envParameters": {
            "type": "object"
        }
    },
  "variables": {
        "nicname": "[concat(parameters('envParameters').VM.vmName,'-Dynamic')]",
        "tags": "[parameters('envParameters').tags]"
        
     

},
    "resources": [


         
         {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('envParameters').VM.vmName,'-dynamic')]",
            "location": "[resourceGroup().location]",
            "tags": "[union(parameters('envParameters').tags , json('{\"usedFor\":\"HANA Database \"}'))]",
            
            "properties": {
                "enableAcceleratedNetworking": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                
                                
                                "id": "[resourceId('eit-spk-net-prd-ea1-rg', 'Microsoft.Network/virtualNetworks/subnets', parameters('envParameters').Network.NetworkName, 'DatabaseSubnet')]"
                                
                            }
                        }
                    }
                ]
            }
        },
       
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').VM.vmName,'-shared')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').VM.DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').VM.vmName,'-sap')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').VM.DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').VM.vmName,'-backup1')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').VM.DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').VM.vmName,'-data1')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').VM.DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').VM.vmName,'-data2')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').VM.DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').VM.vmName,'-data3')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').VM.DiskReference]"
            }
        },        
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('envParameters').VM.AvailSetName]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "tags": "[union(parameters('envParameters').tags , json('{\"usedFor\":\"HANA Database \"}'))]",

            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 5
            }
        },
        {
            "apiVersion": "2019-07-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('envParameters').VM.vmName]",
            "location": "[resourceGroup().location]",
            "tags": "[union(parameters('envParameters').tags , json('{\"usedFor\":\"HANA Database \"}'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-shared'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-sap'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-backup1'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-data1'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-data2'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-data3'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', parameters('envParameters').VM.AvailSetName)]"
            ],
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('envParameters').VM.AvailSetName)]"
                  },                
                "hardwareProfile": {
                    "vmSize": "[parameters('envParameters').VM.vmSize]"
                },
                "osProfile": {
                    "computerName": "[parameters('envParameters').VM.vmName]",
                    "adminUsername": "[parameters('envParameters').VM.vmUserName]",
                    "adminPassword": "[parameters('envParameters').VM.vmPassword]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('envParameters').VM.OperatingSystemSpec.imagePublisher]",
                        "offer": "[parameters('envParameters').VM.OperatingSystemSpec.imageOffer]",
                        "sku": "[parameters('envParameters').VM.OperatingSystemSpec.sku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-shared'))]"
                            }
                        },
                        {
                            "lun": 1,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-sap'))]"
                            }
                        },
                        {
                            "lun": 2,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-backup1'))]"
                            }
                        },
                        {
                            "lun": 3,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-data1'))]"
                            }
                        },
                        {
                            "lun": 4,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-data2'))]"
                            }
                        },
                        {
                            "lun": 5,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').VM.vmName,'-data3'))]"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "scriptextension",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiversion": "2019-07-01",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('envParameters').VM.vmName)]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(parameters('envParameters').sapInfo.baseUri,'scripts/allvmsizes.sh')]"
                            ],
                            "commandToExecute": "[concat('sh allvmsizes.sh \"', 
                                parameters('envParameters').sapInfo.customUri, '\" \"' , 
                                parameters('envParameters').sapInfo.HanaVersion, '\"  \"' , 
                                parameters('envParameters').sapInfo.sapUserName, '\" \"', 
                                parameters('envParameters').sapInfo.sapPassword,'\" \"', 
                                parameters('envParameters').sapInfo.HANASID, '\" \"', 
                                parameters('envParameters').sapInfo.HANANUMBER, '\" \"', 
                                parameters('envParameters').VM.vmSize, '\" \"',
                                parameters('envParameters').sapInfo.SubscriptionEmail, '\" \"', 
                                parameters('envParameters').sapInfo.SubscriptionID,'\"  \"' 
                                , parameters('envParameters').sapInfo.SMTUri,'\"')]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}
