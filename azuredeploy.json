{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hana": {
                    "type": "object"
                }
      
      
      
    },
  "variables": {
        "nicName": "vmip-static"
},
    "resources": [

        {
        //"condition": "[equals(parameters('hana').ExistingNetworkResourceGroup), 'no]",
        "apiVersion": "2016-09-01",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('hana').NetworkName]",
        "location": "[resourceGroup().location]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('hana').addressPrefixes]"
            ]
          },
          "subnets": [
            {
              "name": "[parameters('hana').HANASubnetName]",
              "properties": {
                "addressPrefix": "[parameters('hana').HANASubnetPrefix]"
              }
            },
            {
                "name": "[parameters('hana').ManagementSubnetName]",
                "properties": {
                  "addressPrefix": "[parameters('hana').ManagementSubnetPrefix]"
                }
              }
          ]
        }
      },
         
        {
            //"condition": "[equals(parameters('hana').IPAllocationMethod'), 'Dynamic]",
            "apiVersion": "2018-10-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('hana').vmName,'-dynamic')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "enableAcceleratedNetworking": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('hana').subnetRef]"
                            }
                        }
                    }
                ]
            }
        },
       
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('hana').vmName,'-shared')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('hana').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('hana').vmName,'-sap')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('hana').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('hana').vmName,'-backup1')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('hana').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('hana').vmName,'-data1')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('hana').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('hana').vmName,'-data2')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('hana').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('hana').vmName,'-data3')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('hana').DiskReference]"
            }
        },        
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('hana').AvailSetName]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 5
            }
        },
        {
            "apiVersion": "2019-07-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('hana').vmName]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-shared'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-sap'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-backup1'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-data1'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-data2'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-data3'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', parameters('hana').AvailSetName)]"
            ],
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('hana').AvailSetName)]"
                  },                
                "hardwareProfile": {
                    "vmSize": "[parameters('hana').vmSize]"
                },
                "osProfile": {
                    "computerName": "[parameters('hana').vmName]",
                    "adminUsername": "[parameters('hana').vmUserName]",
                    "adminPassword": "[parameters('hana').vmPassword]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('hana').OperatingSystemSpec.imagePublisher]",
                        "offer": "[parameters('hana').OperatingSystemSpec.imageOffer]",
                        "sku": "[parameters('hana').OperatingSystemSpec.sku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-shared'))]"
                            }
                        },
                        {
                            "lun": 1,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-sap'))]"
                            }
                        },
                        {
                            "lun": 2,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-backup1'))]"
                            }
                        },
                        {
                            "lun": 3,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-data1'))]"
                            }
                        },
                        {
                            "lun": 4,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-data2'))]"
                            }
                        },
                        {
                            "lun": 5,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('hana').vmName,'-data3'))]"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "scriptextension",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiversion": "2019-07-01",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('hana').vmName)]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(parameters('hana').baseUri,'scripts/allvmsizes.sh')]"
                            ],
                            "commandToExecute": "[concat('sh allvmsizes.sh \"', 
                                parameters('hana').customUri, '\" \"' , 
                                parameters('hana').HanaVersion, '\"  \"' , 
                                parameters('hana').vmUserName, '\" \"', 
                                parameters('hana').vmPassword,'\" \"', 
                                parameters('hana').HANASID, '\" \"', 
                                parameters('hana').HANANUMBER, '\" \"', 
                                parameters('hana').vmSize, '\" \"',
                                parameters('hana').SubscriptionEmail, '\" \"', 
                                parameters('hana').SubscriptionID,'\"  \"' 
                                , parameters('hana').SMTUri,'\"')]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}
