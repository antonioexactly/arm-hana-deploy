{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "envParameters": {
            "type": "object"
        }
    },
  "variables": {
        "nicName": "[concat(parameters('envParameters').vmName,'-Dynamic')]",
        "HANAsubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('envParameters').NetworkName, parameters('envParameters').HANASubnetName)]"
     

},
    "resources": [


         
         {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('envParameters').vmName,'-dynamic')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "enableAcceleratedNetworking": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                
                                
                                "id": "[resourceId('eit-spk-net-prd-ea1-rg', 'Microsoft.Network/virtualNetworks/subnets', parameters('envParameters').NetworkName, 'DatabaseSubnet')]"
                                
                            }
                        }
                    }
                ]
            }
        },
       
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').vmName,'-shared')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').vmName,'-sap')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').vmName,'-backup1')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').vmName,'-data1')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').vmName,'-data2')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').DiskReference]"
            }
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('envParameters').vmName,'-data3')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": "[parameters('envParameters').DiskReference]"
            }
        },        
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('envParameters').AvailSetName]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 5
            }
        },
        {
            "apiVersion": "2019-07-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('envParameters').vmName]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-shared'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-sap'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-backup1'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-data1'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-data2'))]",
                "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-data3'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', parameters('envParameters').AvailSetName)]"
            ],
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('envParameters').AvailSetName)]"
                  },                
                "hardwareProfile": {
                    "vmSize": "[parameters('envParameters').vmSize]"
                },
                "osProfile": {
                    "computerName": "[parameters('envParameters').vmName]",
                    "adminUsername": "[parameters('envParameters').vmUserName]",
                    "adminPassword": "[parameters('envParameters').vmPassword]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('envParameters').OperatingSystemSpec.imagePublisher]",
                        "offer": "[parameters('envParameters').OperatingSystemSpec.imageOffer]",
                        "sku": "[parameters('envParameters').OperatingSystemSpec.sku]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-shared'))]"
                            }
                        },
                        {
                            "lun": 1,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-sap'))]"
                            }
                        },
                        {
                            "lun": 2,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-backup1'))]"
                            }
                        },
                        {
                            "lun": 3,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-data1'))]"
                            }
                        },
                        {
                            "lun": 4,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-data2'))]"
                            }
                        },
                        {
                            "lun": 5,
                            "createOption": "Attach",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('envParameters').vmName,'-data3'))]"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "scriptextension",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiversion": "2019-07-01",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('envParameters').vmName)]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(parameters('envParameters').baseUri,'scripts/allvmsizes.sh')]"
                            ],
                            "commandToExecute": "[concat('sh allvmsizes.sh \"', 
                                parameters('envParameters').customUri, '\" \"' , 
                                parameters('envParameters').HanaVersion, '\"  \"' , 
                                parameters('envParameters').vmUserName, '\" \"', 
                                parameters('envParameters').vmPassword,'\" \"', 
                                parameters('envParameters').HANASID, '\" \"', 
                                parameters('envParameters').HANANUMBER, '\" \"', 
                                parameters('envParameters').vmSize, '\" \"',
                                parameters('envParameters').SubscriptionEmail, '\" \"', 
                                parameters('envParameters').SubscriptionID,'\"  \"' 
                                , parameters('envParameters').SMTUri,'\"')]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}
